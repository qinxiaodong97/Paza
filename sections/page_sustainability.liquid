{% style %}
  .sustain {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .sustain__copy {}

  .sustain__copy h2 {
    margin-bottom: 1rem;
  }

  .sustain__copy p{
    width:70%;
    margin-inline: auto;
  }
  .sustain__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 45rem;
    margin-inline: auto;
  }

  @media(min-width: 768px) {
    .sustain__list {
      flex-direction: row;
    }
  }
  .sustain__list-item {
    position: relative;
    font-size: var(--fs-base);
    text-align: center;
    padding: 0.7em;
    border: 2px solid rgba(var(--color-dark));
    border-radius: 10px;
    min-height: 40px;
  }
  .sustain__list-item svg {
    width: 100%;
    height: 100%;
  }
  .sustain__list-item span {
    position: absolute;
    width: 32px;
    height: 32px;
    bottom: -14px;
    right: -12px;
  }

  .sustain__stats {
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
    margin-bottom: 2rem;
    border-radius: 10px;
    border: 2px solid rgba(var(--color-dark));
    overflow: hidden;
  }

  .sustain__stats span {
    display: flex;
    padding: 1rem;
  }
  .sustain__stats span:nth-child(odd) {
    background-color: rgba(var(--color-primary), 1);
  }

  .sustain__stats h3 {
    flex: 0 0 30%;
    text-align: center;
    font-family: var(--ff-heading);
  }
  .sustain__stats p {
    flex: 0 0 70%;
    text-align: left;
  }

  .sustain-img {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .pad-2 {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .sustain .button{
    background-color: rgba(var(--color-dark), 1);
    color:white;
    font-family: var(--ff-body);
    font-style: normal;
    text-transform:normal;
  }
{% endstyle %}

{% assign hero_image_url = section.settings.image %}

