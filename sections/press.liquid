{{ 'testimonials.css' | asset_url | stylesheet_tag }}

{% style %}
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - 1rem));
    }
  }

  .press {
    --gap: 1rem;
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    padding-block: 1rem;
    margin-top: 10%;
    margin-bottom: 10%;
    /* border-top: 2px solid rgba(var(--color-dark), 1);
    border-bottom: 2px solid rgba(var(--color-dark), 1); */
  }

  .press__items {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    gap: var(--gap, 1rem);
    min-width: 100%;
    animation: marquee 10s linear infinite;
  }

  .press__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 200px;
  }
  .press__image {
    display: block;
    width: 100%;
    height: 100px;
    max-width: 150px;
    max-height: 2rem;
    margin-bottom: 1rem;
    fill: rgba(var(--color-dark), 1);
  }

  .press__text {
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
    line-height: 1.2;
    text-transform: uppercase;
    font-family: var(--ff-body);
    font-weight: var(--fw-body-medium);
    font-size: var(--fs-base);
  }

  /* @media (min-width: 768px) {
    .press__image {
      height: 175px;
      max-width: 262px;
      max-height: 3.5rem;
    }
    .press__item {
      flex: 0 0 262px;
    }
    .press__text {
      text-align: center;
