{% style %}
   .college h1,
   .college h2 {
     font-family: var(--ff-heading);
     text-transform: uppercase;
     font-weight: 700;
     line-height: 1.5;
     margin-bottom: 1rem;
   }

   .college__headline {
     font-size: var(--fs-3xl);
   }
   .college__wrapper {
     width: 100%;
     display: flex;
     gap: 1rem;
     flex-wrap: wrap;
   }

   .college__wrapper--main {
     justify-content: center;
     gap: 1rem;
   }

   .college__wrapper--main > * {
     flex: 0 0 300px;
   }

   .college__img-cards {
     margin-bottom: 2rem;
     display: grid;
     grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
     grid-auto-rows: 1fr;
     gap: 1rem;
     margin-top: 2rem;
   }

   .college__img-card {
     display: flex;
     flex-direction: column;
     align-items: center;
     gap: 1rem;
   }

   .college__img-card-image {
     border-radius: 6px;
     border: 2px solid black;
     width: 100%;
     aspect-ratio: 1/1;
     object-fit: cover;
     max-height: 250px
     position: relative;
   }

   .college__img-card:nth-child(1) .college__img-card-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/college-img-4.jpg?v=1675446384');
     background-size: cover;
     background-position: center;
   }

   .college__img-card:nth-child(2) .college__img-card-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/bodega_guy.jpg?v=1675446385');
     background-size: cover;
     background-position: center;
   }

   .college__img-card:nth-child(3) .college__img-card-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/college-img-2-squooshed.jpg?v=1675446736');
     background-size: cover;
     background-position: center;
   }

   .college__img-card:nth-child(4) .college__img-card-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/college-img-3.jpg?v=1675446384');
     background-size: cover;
     background-position: center;
   }


   .college__number-cards {
     justify-content: center;
     display: grid;
     gap: 1rem;
     grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
     grid-auto-rows: 1fr;
   }
   .college__number-card {
     width: 100%;
     aspect-ratio: 1/1;
     display: flex;
     flex-direction: column;
     gap: 1rem;
     border: 2px solid black;
     padding: 1rem;
     border-radius: 6px;
   }

   .college__number-card-copy{
    font-weight: 500;
   }

   .college__number-card span {
     font-size: 2rem;
     font-weight: 700;
     font-family: var(--ff-heading);
   }

   .college__info-items {
     display: flex;
     flex-direction: column;
     align-items: center;
   }

   .college__info-item {
     display: flex;
     gap: 1rem;
     align-items: center;
     justify-content: space-around;
     width: 100%;
     gap: 2rem;
     border-radius: 6px;
     padding: 1rem;
     margin-bottom: 2rem;
   }

   .college__info-item > * {
     flex: 0 0 300px;
   }

   .college__info-item:nth-child(odd) {
     flex-wrap: wrap-reverse;
   }
   .college__info-item:nth-child(even) {
     flex-wrap: wrap;
   }

   .college__info-image {
     border-radius: 6px;
     border: 2px solid black;
     aspect-ratio: 1/1;
   }

  .college__info-item:first-child .college__info-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/college-img-4.jpg?v=1675446384');
     background-size: cover;
     background-position: center;
   }

  .college__info-item:nth-child(2) .college__info-image {
     background: url('https://cdn.shopify.com/s/files/1/0532/8234/1052/files/photoshoot_group_shot-squooshed.jpg?v=1675446728');
     background-size: cover;
     background-position: center;
   }

  .college__info-item:nth-child(3) .college__info-image {
     background: url("https://cdn.shopify.com/s/files/1/0532/8234/1052/files/college-img-1.jpg?v=1675446385");
     background-size: cover;
     background-position: center;
   }

   .college__footer {
     display: flex;
     flex-direction: column;
     align-items: center;
      justify-content: center;
     gap: 1rem;
     min-height: 500px;
   }

   .college__footer img{
    /* position: absolute; */
    bottom: 0;
   }

   .college__footer .button {
     font-size: var(--fs-2xl);
   }
{% endstyle %}

