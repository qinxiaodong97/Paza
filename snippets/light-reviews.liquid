{{ 'reviews.css' | asset_url | stylesheet_tag }}

{% style %}
  @media(min-width: 768px) {
    .your-way p {
      max-width: 50%;
    }

    .reviews .hometitle {
      white-space: wrap;
    }
  }
{% endstyle %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<div class=" reviews your-way  flow color-dark overflow-x">
  <div class="review-ratings section-padding container">
    <div class="review-ratings__container  container">
      <h1 class="home-title">840 reviews</h1>
      <span class="review-ratings__overall">4.8 {% render 'reviews-stars' %}</span>
    </div>
    <div class="review-ratings__container all-reviews">
      {% comment %} {% render 'cta-button', text: 'shop now', link: '/products/pzaz-four-pack', color: 'primary' %} {% endcomment %}
    </div>
  </div>

  <div class="container section-padding ">
    <div class="swiper reviewSwiper ">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.type =='review' %}
              <div class="swiper-slide review-slider">
                <div class="review-header">
                  <div class="review-title">
                    <h3>{{block.settings.title}}</h3>
                   
                  </div>
                  <div class="review-stars">
                  {% render 'five-stars' %}
                  </div>
                </div>
                <div class="user_name">
                  {{block.settings.user_name}}<span> - Verified Customer</span>
                </div>
                <div class="review-description">
                  {{block.settings.content}}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
    </div>
  </div>

  {% for block in section.blocks %}
    {% case block.type %}
      {% when '@app' %}
      {% render block %}
    {% endcase %}
  {% endfor %}
</div>
<script>
    var swiper = new Swiper(".reviewSwiper", {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 1,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
      },
    });
  </script>